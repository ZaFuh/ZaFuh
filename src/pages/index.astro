			}
			.scrollbar-container {
				position: fixed;
				top: 50%;
				right: 10rem;
				transform: translateY(-50%);
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: space-between;
				z-index: 100;
				pointer-events: none;
				height: 170px; /* default full height */
				transition: height 0.9s ease;
			}

			.scrollbar-container.inactive {
				height: 40px; /* only enough for one circle */
			}

			.scrollbar-line {
				width: 3px;
				flex: 1;
				background: rgb(233, 229, 244);
				border-radius: 2px;
				position: absolute;
				top: 0;
				bottom: 0;
			}

			.scrollbar-circle {
				width: 18px;
				height: 18px;
				background: rgb(233, 229, 244);
				border: none;
				border-radius: 50%;
				transition: all 0.3s ease;
				pointer-events: auto;
				cursor: pointer;
				z-index: 1;
			}
			.scrollbar-circle.active {
				width: 24px;
				height: 24px;
				background: rgb(233, 229, 244);
				position: relative;
			}

			.scrollbar-circle.active::before {
				content: "";
				position: absolute;
				top: -7px; /* size of the gap */
				left: -7px;
				width: 32px; /* 24 + 4*2 */
				height: 32px;
				border: 3px solid rgb(233, 229, 244); /* outer ring */
				border-radius: 50%;
			}

			.scrollbar-circle.inactive {
			}
