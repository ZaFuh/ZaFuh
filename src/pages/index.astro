		<script>
			document.addEventListener("DOMContentLoaded", () => {
				const circles = document.querySelectorAll(".scrollbar-circle");
				const sections = document.querySelectorAll(".scroll-section");
				const scrollbar = document.querySelector(
					".scrollbar-container",
				);
				const toggleBtn = document.getElementById("hobbies-toggle");
				const hobbiesList = document.getElementById("hobbies-list");

				toggleBtn.addEventListener("click", () => {
					const isHidden = hobbiesList.hasAttribute("hidden");

					if (isHidden) {
						hobbiesList.removeAttribute("hidden");
						toggleBtn.textContent = "Hide Other Hobbies";
						toggleBtn.setAttribute("aria-expanded", "true");
					} else {
						hobbiesList.setAttribute("hidden", "");
						toggleBtn.textContent = "Show Other Hobbies";
						toggleBtn.setAttribute("aria-expanded", "false");
					}
				});

				let scrollTimeout = 300;

				function onScroll() {
					let activeIdx = 0;
					sections.forEach((section, idx) => {
						const rect = section.getBoundingClientRect();
						if (rect.top < window.innerHeight * 0.5) {
							activeIdx = idx;
						}
					});
					circles.forEach((circle, idx) => {
						if (idx === activeIdx) {
							circle.classList.add("active");
							circle.classList.remove("inactive");
						} else {
							circle.classList.remove("active");
							circle.classList.add("inactive");
						}
					});

					scrollbar.classList.remove("inactive"); // expand

					clearTimeout(scrollTimeout);
					scrollTimeout = setTimeout(() => {
						scrollbar.classList.add("inactive"); // shrink after delay
					}, 700); // match this to your CSS transition (1s + slight buffer)
				}

				window.addEventListener("scroll", onScroll, { passive: true });
				onScroll();

				circles.forEach((circle, idx) => {
					circle.addEventListener("click", () => {
						sections[idx].scrollIntoView({
							behavior: "smooth",
							block: "start",
						});
					});
				});
			});
		</script>
